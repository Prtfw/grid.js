    "serve": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmined/grid.js.git"
  },
  "author": "OpenMined",
