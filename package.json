  "bugs": {
    "url": "https://github.com/openmined/grid.js/issues"
  },
  "homepage": "https://github.com/openmined/grid.js#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "ws": "^7.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-core": "^6.26.3",
    "husky": "^2.3.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0"
